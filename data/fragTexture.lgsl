#version 410 core

out vec4 FragColor;
uniform vec4 ourColor;
uniform float shine;

uniform sampler2D OurTexture;
uniform samplerCube EnvTexture;

in vec2 TexCoord;
in vec4 varyingColor;
in vec3 FragPos; 
flat in vec3 viewPos;
in vec3 Normal;

void main()
{
	vec4 envColor;

	vec3 r = reflect((FragPos-viewPos),Normal);
	
	envColor = texture(EnvTexture,r);

	vec4 myCol = ourColor;
   FragColor = mix(texture(OurTexture, TexCoord),envColor,shine);
   //FragColor = varyingColor;
}